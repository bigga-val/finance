{% include "_extension/sidebar.html.twig" %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container">
        <div class="row">
            <h2>{{ cabinet|upper }}</h2>
        </div>
        <div class="row">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-title">RÃ©cents Signes Vitaux</div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Date Consultation</th>
                            <th>Nom & Postnom</th>
                            <th>Temperature</th>
                            <th>Tension Arterielle</th>
                            <th>Poids</th>
                            <th>Observation</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% with { i : 1 } %}
                            {% for signe in signes %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ signe.createdAt|date('d-m-Y') }}</td>
                                    <td>{{ signe.patient.nom ~' '~ signe.patient.postnom }}</td>
                                    <td>{{ signe.temperature }}</td>
                                    <td>{{ signe.tensionArterielle }}</td>
                                    <td>{{ signe.poids }}</td>
                                    <td>
                                        <a href="{{ path('consultations', {'patient': signe.patient.id, 'signes': signe.id}) }}">Voir</a>
                                        <a href="{{ path('consultation', {'patient': signe.patient.id, 'signes_vitaux': signe.id}) }}">Consulter</a>
                                    </td>
                                </tr>
                                {% set i = i+1 %}
                            {% endfor %}
                        {% endwith %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# {{ dump(agent) }}
    {{ dump(cabinet) }}
    {{ dump(signes) }}#}

</div>

