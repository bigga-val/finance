{% extends 'base.html.twig' %}

{% block title %}Hello PatientController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅ </h1>

    {# {{ dump(patients) }} #}
    <table class="table table-hover">
        <thead class="bg-dark">
            <th>#</th>
            <th>Fiche</th>
            <th>Nom</th>
            <th>Postnom</th>
            <th>Genre</th>
            <th>Type</th>
            <th>Action</th>
        </thead>
        <tbody>
        {% with { i : 1 } %}
    {% for patient in patients %}

        <tr>
            <td>{{ i }}</td>
            <td>{{ patient.numeroFiche }}</td>
            <td>{{ patient.nom }}</td>
            <td>{{ patient.postnom }}</td>
            <td>{{ patient.genre }}</td>
            <td>{{ patient.isAbonne ? 'Abonne':'Privé' }}</td>
            <td>{% if is_granted('ROLE_USER') %}
                    <a href="{{ path('new_paiement_acte',{ 'id': patient.id}) }}">Payer fiche</a>
                {% else %}
                    <a href="{{ path('new_paiement_acte',{ 'id': patient.id}) }}">Non Authorisé</a>
                {% endif %}
            </td>
        </tr>
        {% set i = i+1 %}
    {% endfor %}

        {% endwith %}
        </tbody>
    </table>
</div>
{% endblock %}


