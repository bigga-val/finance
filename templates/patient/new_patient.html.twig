            </div>
            <div>
                {{ form_label(form.adresse, "Adresse") }}
                {{ form_errors(form.adresse) }}
                <div>{{ form_widget(form.adresse) }}</div>
            </div>
            <div>
                {{ form_label(form.genre, "Genre") }}
                {{ form_errors(form.genre) }}
                <div>{{ form_widget(form.genre) }}</div>
            </div>
            <div>
                <div>{{ form_widget(form.save) }}</div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
