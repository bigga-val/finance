                    {{ form_label(form.nom, "Nom du patiennt") }}
                    {{ form_errors(form.nom) }}
                    <div>{{ form_widget(form.nom) }}</div>
                </div>
                <div>
                    {{ form_label(form.postnom, "Postnom patient") }}
                    {{ form_errors(form.postnom) }}
                    <div>{{ form_widget(form.postnom) }}</div>
                </div>
